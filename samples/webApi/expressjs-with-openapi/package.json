{
  "name": "expressjs-with-openapi",
  "version": "1.0.0",
  "type": "module",
  "description": "Sample WebApi using Event Sourcing with Emmett, Express.js, OpenAPI validation, and in-memory storage",
  "scripts": {
    "setup": "cat .nvmrc | nvm install; nvm use",
    "build": "tsup",
    "build:ts": "tsc",
    "build:ts:watch": "tsc -b --watch",
    "start": "tsx ./src/index.ts",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier --check \"**/**/!(*.d).{ts,json,md}\"",
    "lint:eslint": "eslint '**/*.ts'",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:prettier": "prettier --write \"**/**/!(*.d).{ts,json,md}\"",
    "fix:eslint": "eslint '**/*.ts' --fix",
    "test": "run-s test:unit test:int test:e2e",
    "test:unit": "glob -d -c \"node --import tsx --import tsx/cjs --test\" **/*.unit.spec.ts",
    "test:int": "glob -d -c \"node --import tsx --import tsx/cjs --test\" **/*.int.spec.ts",
    "test:e2e": "glob -d -c \"node --import tsx --import tsx/cjs --test\" **/*.e2e.spec.ts",
    "test:watch": "run-p test:unit:watch test:int:watch test:e2e:watch",
    "test:unit:watch": "glob -d -c \"node --import tsx --import tsx/cjs --test --watch\" **/*.unit.spec.ts",
    "test:int:watch": "glob -d -c \"node --import tsx --import tsx/cjs --test --watch\" **/*.int.spec.ts",
    "test:e2e:watch": "glob -d -c \"node --import tsx --import tsx/cjs --test --watch\" **/*.e2e.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/event-driven-io/emmett.git"
  },
  "keywords": [
    "Event Sourcing",
    "OpenAPI",
    "Express.js",
    "In-Memory"
  ],
  "author": "Oskar Dudycz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/event-driven-io/emmett/issues"
  },
  "homepage": "https://github.com/event-driven-io/emmett#readme",
  "dependencies": {
    "@event-driven-io/emmett": "file:../../../src/packages/emmett",
    "@event-driven-io/emmett-expressjs": "file:../../../src/packages/emmett-expressjs",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-openapi-validator": "^5.3.7",
    "http-problem-details": "^0.1.5",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "20.11.30",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "glob": "10.3.10",
    "npm-run-all2": "6.1.2",
    "prettier": "3.2.5",
    "tsconfig-paths": "4.2.0",
    "tsup": "8.0.2",
    "tsx": "4.7.1",
    "typescript": "5.3.3"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ]
}
